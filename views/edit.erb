<h1>メモアプリ</h1>
<form action="/memos/<%= @id %>" method="POST">
  <input type="hidden" id="_method" name="_method" value="PATCH">
  <h2>タイトル</h2> <input type="text" name="title" value="<%= @title %>">
  <h2>内容</h2> <textarea name="contents"><%= @contents %></textarea>
  <p><input type="submit" value="変更"></p>
  <a href="/memos/<%= @id %>">メモ表示画面へ戻る</a>
</form>